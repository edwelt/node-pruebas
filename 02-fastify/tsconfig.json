{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "build"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
